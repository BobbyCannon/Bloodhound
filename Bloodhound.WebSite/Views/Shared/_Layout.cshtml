<!DOCTYPE html>
<html lang="en" ng-app="Site">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
		<meta name="description" content="Tracking all the things!" />
		<title>Bloodhound</title>
		<link href="~/favicon.ico?v=0.1" rel="shortcut icon" type="image/x-icon" />
		@Styles.Render("~/content/css")
	</head>
	<body>
		<div id="header" class="row">
			<div class="span12">
				<a href="/">
					<h2 class="blackish">
						<img src="/Content/logo.png" height="32" width="32" /> Bloodhound
					</h2>
				</a>
			</div>
			<div class="span12 text-right">
				@RenderSection("header", false)
				<ul>
					<li>@Html.ActionLink("About", "About", "Home")</li>
				</ul>
			</div>
		</div>
		<div id="content">
			@RenderBody()
			<div id="footer">
				@if (ViewBag.ElapsedTime != null)
				{
					<text>Loaded in</text>
					@ViewBag.ElapsedTime
				}
			</div>
		</div>
		@Scripts.Render("~/scripts/js")
		@RenderSection("scripts", false)
	</body>
</html>
